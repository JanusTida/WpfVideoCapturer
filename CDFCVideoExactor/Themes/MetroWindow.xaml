<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:metros="http://metro.mahapps.com/winfx/xaml/controls"
                    xmlns:local="clr-namespace:CDFCVideoExactor.Themes">
    <Style TargetType="{x:Type metros:MetroWindow}" x:Key="DefaultMWindow">
        <Setter Property="WindowTitleBrush" Value="#cfcfcf"/>
        <Setter Property="TitlebarHeight" Value="50"/>
        <Setter Property="TitleForeground" Value="Black"/>
        <Setter Property="WindowState" Value="Maximized"/>
        <Setter Property="Width" Value="1440"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="BorderBrush" Value="Black"/>
        <Setter Property="Height" Value="900"/>
    </Style>
</ResourceDictionary>