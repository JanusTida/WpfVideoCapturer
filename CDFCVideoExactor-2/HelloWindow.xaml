<Window x:Class="CDFCVideoExactor.HelloWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CDFCVideoExactor"
        xmlns:metros="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:gif="http://wpfanimatedgif.codeplex.com"
        IsEnabled="{Binding IsEnabled}"
        IsEnabledChanged="HelloWindow_IsEnabledChanged" AllowsTransparency="True"
        WindowStartupLocation="CenterScreen" WindowStyle="None" Background="Transparent"
        mc:Ignorable="d"  ResizeMode="NoResize"
        Title="HelloWindow" >
    <Border>
        <Image Source="WelcomeImgMonitoring.png" RenderOptions.BitmapScalingMode="HighQuality"  />
        <!--<local:GifImage Source="Hole.gif" Stretch="Fill"/>-->
        
    </Border>
</Window>
