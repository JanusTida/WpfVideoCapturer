<UserControl x:Class="CDFCVideoRegister.Controls.RegisterFinishedPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CDFCVideoRegister.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="300">
    <Grid>
        <!--
            
        <Grid.RowDefinitions>
            <RowDefinition Height="200"/>
            
        </Grid.RowDefinitions>
-->
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock  TextWrapping="Wrap"  MaxWidth="200">恭喜您,我们已经向您的邮箱<Run Foreground="Blue" Text="{Binding TargetEMailAddress,Mode=OneTime}">
                    <Run.TextDecorations>
                        <TextDecorationCollection>
                        <TextDecoration PenOffset="5" PenOffsetUnit="Pixel" PenThicknessUnit="Pixel"/>
                    </TextDecorationCollection>
                    </Run.TextDecorations></Run>发送了一封邮件，内含证书文件，请前往下载。
            </TextBlock>
            <Button Content="完成注册" Margin="0,36,0,0" Command="{Binding FinishCommand}"/>
        </StackPanel>
        
        
        
    </Grid>
</UserControl>
